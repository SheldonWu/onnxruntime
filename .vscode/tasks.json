{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/TensorRT/build",
    },
    "tasks": [
        {
            "type": "shell",
            "label":"cmake",
            "command":"cmake",
            "args": [
                "..",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
        },
        {
            "label": "make",
            "command":"make",
            "args": [
                "-j4"
            ]
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn":[
                "cmake",
                "make",
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
 
}